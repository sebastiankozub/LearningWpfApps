<Page x:Class="LearningWpfApp.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearningWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400" 
      Height="300" Width="400"
      Title="{Binding Title}"
      DataContext="{Binding StartPageViewModel, Source={StaticResource Locator}}"
      >
    
    <Grid>
        <Button Content="Open Szama Menu" Command="{Binding OpenMenuCommand}" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="100" Width="200" />
    </Grid>
</Page>
